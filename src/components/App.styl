.app
  width 100%
  height: 100%
  color: #DDD
  background-color: #212121
  .app-header
    height: 55px
    line-height: 55px
    color: #FFD700
    text-align: center
    .app-logo
      width: 30px
      height: 25px
      margin-top: -5px
      vertical-align: middle
    .app-title
      display: inline-block
      height: 5px
      margin-left: 10px
      font-size: 18px
      font-weight lighter
  .music-tab
    display: flex
    height: 30px
    line-height: 30px
    color: #DDD
    text-align: center
    .tab-item
      flex 1
  .music-view
    position: fixed
    top: 88px
    left: 0px
    bottom 52px
    width 100%
  .nav-link, .link
    display block
    color: inherit
    text-decoration: none
    &.active
      color: #FFD700
      border-bottom: 2px solid #FFD700

